# Utilities.
V                        := 0
Q                        := $(if $(filter 1,$(V)),,@)
TIMESTAMP                 = $(shell date -u +"%Y-%m-%dT%H:%M:%SZ")

# Directories.
ROOT_DIR                  = $(CURDIR)
DIST_DIR                  = $(ROOT_DIR)/dist
TEST_DIR                  = $(ROOT_DIR)/test

# Go.
GO                       := GO111MODULE=on go
GO_COVERAGE               = $(TEST_DIR)/coverage.$(TIMESTAMP)

# Container Engine.
CONTAINER_ENGINE         := docker

# Versioning.
GIT_DIRTY                := $(shell test -n "`git status --porcelain`" && echo ".dirty" || true)
VERSION                  := $$(grep 'SDKVersion =' spotinst/version.go | awk '{print $$4}' | xargs)

# Goreleaser.
GORELEASER               := goreleaser/goreleaser:v0.143

define goreleaser_release
	$(CONTAINER_ENGINE) run --rm \
		-v $(PWD):/go/src/github.com/spotinst/spotinst-sdk-go \
		-w /go/src/github.com/spotinst/spotinst-sdk-go \
		-e GITHUB_TOKEN \
		-e VERSION=$(VERSION) \
		$(GORELEASER) release --rm-dist
endef
